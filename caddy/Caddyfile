shieldvpn.ru {
    log


    root * /srv/www


    encode zstd gzip


    route {

        @grpc header Content-Type application/grpc*
        handle @grpc {
            reverse_proxy h2c://vpn_xray:10000 {
                transport http {
                    versions 2
                }
            }
        }


        handle {
            file_server
        }
    }

    tls jacob.tokarev@icloud.com
}