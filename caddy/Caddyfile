shieldvpn.ru {
    log

    # Проксируем gRPC трафик на Xray
    # Указываем, что это h2c (HTTP/2 Cleartext), так как TLS терминируется на Caddy
    @grpc host shieldvpn.ru
    handle @grpc {
        reverse_proxy h2c://vpn_xray:10000 {
            transport http {
                versions 2
            }
        }
    }

    tls jacob.tokarev@icloud.com
}